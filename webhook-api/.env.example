# Webhook API Environment Variables
# Copy this file to .env and update with your actual values

# Port to run the webhook API (default used by README for local testing)
PORT=4002

# Qdrant Vector Database Configuration
QDRANT_URL=https://your-cluster-id.region.aws.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# LLM and Embedding URLs
LLM_URL=https://your-llm-endpoint.example.com/
EMBEDDING_URL=https://your-embedding-endpoint.example.com/

# Timeouts are in milliseconds. Adjust during testing to shorten waits.
# How long of user inactivity (ms) before proactive thoughts start (default 10 minutes)
IDLE_TIMEOUT_MS=600000

# How long after the initial proactive thought to send a check-in (default 5 minutes)
PROACTIVE_CHECKIN_MS=300000

# How long to wait after the check-in before going quiet (default 2 minutes)
PROACTIVE_QUIET_MS=120000
