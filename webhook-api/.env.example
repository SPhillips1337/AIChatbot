# Webhook API Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=4002
DEV_MOCK=false

# Country Blocking (comma-separated ISO country codes)
BLOCKED_COUNTRIES=RU,KP,NG,CN,IR,SY,AF,MM,BY

# LLM and Embedding Configuration
LLM_URL=https://your-llm-endpoint.example.com/
LLM_MODEL=qwen2.5:7b-instruct-q4_K_M
EMBEDDING_URL=https://your-embedding-endpoint.example.com/
EMBEDDING_MODEL=bge-m3:latest

# Qdrant Vector Database Configuration
QDRANT_URL=https://your-cluster-id.region.aws.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# Neo4j Graph Database Configuration (optional)
# If not set, system will use JSON-based profileStore only
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Admin User IDs (comma-separated list of user IDs with admin privileges)
ADMIN_USER_IDS=admin,service_account

# Deep Agent / Code Sandbox Configuration (required for /agent and /deep commands)
OPENCODE_HOST=host.docker.internal
OPENCODE_PORT=2222
OPENCODE_USER=opencodeuser
OPENCODE_PASSWORD=your_secure_password_here

# Timing Configuration (all in milliseconds)
# How long of user inactivity before proactive thoughts start (default 10 minutes)
IDLE_TIMEOUT_MS=600000
# How long after the initial proactive thought to send a check-in (default 5 minutes)
PROACTIVE_CHECKIN_MS=300000
# How long to wait after the check-in before going quiet (default 2 minutes)
PROACTIVE_QUIET_MS=120000

# Fact Extraction Configuration
PARAPHRASE_QUESTIONS=true
ASK_COOLDOWN_MS=604800000
EMBED_AUTO_SAVE_SIM=0.90
EMBED_CONFIRM_SIM=0.78
EMBED_SIMILARITY_THRESHOLD=0.78

# External Input System
# Twitter API (Optional - if not set, Twitter trends will be skipped)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret
X_REDIRECT_URI=http://localhost

# Research Augmentation (Optional - for deep research on trends)
PERPLEXICA_URL=http://localhost:3000/api/search
SEARXNG_URL=http://localhost:8080
